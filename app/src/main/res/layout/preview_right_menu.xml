<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_conatainer"
    android:layout_width="130dp"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/top_menu_container">


    <FrameLayout
        android:id="@+id/control"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/preview_move"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/img_btn_bg"
            android:clickable="true"
            android:src="@mipmap/move" />

        <ImageView
            android:id="@+id/preview_move_up"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="top|center"
            android:background="@drawable/img_btn_bg"
            android:clickable="true"
            android:src="@mipmap/ahead" />

        <ImageView
            android:id="@+id/preview_move_down"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/img_btn_bg"
            android:clickable="true"
            android:src="@mipmap/adown" />

        <ImageView
            android:id="@+id/preview_move_left"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="left|center"
            android:background="@drawable/img_btn_bg"
            android:clickable="true"
            android:src="@mipmap/aleft" />

        <ImageView
            android:id="@+id/preview_move_right"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right|center"
            android:background="@drawable/img_btn_bg"
            android:clickable="true"
            android:src="@mipmap/aright" />


    </FrameLayout>


    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/control"
        android:layout_gravity="top"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="top|right"
            android:background="@drawable/bg_circle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/roll_angle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|left"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="0°"
                android:textColor="@color/colorText"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|left"
                android:layout_weight="1"
                android:gravity="center|top"
                android:text="横滚角"
                android:textColor="@color/colorText"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_circle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pitch_angle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|left"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="0°"
                android:textColor="@color/colorText"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|left"
                android:layout_weight="1"
                android:gravity="center|top"
                android:text="俯仰角"
                android:textColor="@color/colorText"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_circle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jimi_length"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="0.000m"
                android:textColor="@color/colorText"
                android:textSize="8sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|left"
                android:layout_weight="1"
                android:gravity="center|top"
                android:text="计米长度"
                android:textColor="@color/colorText"
                android:textSize="7sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ip_adress_container"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_circle_red"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ip_adress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="无"
                android:textColor="@color/alarm_color"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/ip_adress2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|left"
                android:layout_weight="1"
                android:gravity="center|top"
                android:text="控制权"
                android:textColor="@color/alarm_color"
                android:textSize="7sp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>