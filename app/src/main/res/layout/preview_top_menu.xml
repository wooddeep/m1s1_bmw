        <LinearLayout
            style="@style/main_linearlayout"
            android:layout_marginTop="2dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/zoom_sub"
                android:src="@mipmap/sub"
                style="@style/preview_top_ibtn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="聚焦"
                android:gravity="center"
                android:textSize="@dimen/preview_textsize"
                android:textColor="@color/colorText"/>
            <ImageButton
                android:id="@+id/zoom_add"
                android:src="@mipmap/add"
                style="@style/preview_top_ibtn" />

        </LinearLayout>

        <LinearLayout
            style="@style/main_linearlayout"
            android:layout_marginTop="2dp"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/size_sub"
                android:src="@mipmap/sub"
                style="@style/preview_top_ibtn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="变倍"
                android:gravity="center"
                android:textSize="@dimen/preview_textsize"
                android:textColor="@color/colorText"/>
            <ImageButton
                android:id="@+id/size_add"
                style="@style/preview_top_ibtn"
                android:src="@mipmap/add" />

        </LinearLayout>

        <ImageView
            android:id="@+id/battery"
            style="@style/preview_top_img"
            android:clickable="false"
            android:focusable="false"
            android:paddingBottom="13dp"
            android:paddingTop="0dp"
            android:src="@mipmap/battery0"/>

    </LinearLayout>

</RelativeLayout>