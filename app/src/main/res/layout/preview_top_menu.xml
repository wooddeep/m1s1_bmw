        <FrameLayout
            android:id="@+id/turnZero"
            style="@style/preview_top_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/zero"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="计米归零"
                android:textSize="7sp"
                android:textColor="@color/colorText"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/line_back"
            style="@style/preview_top_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/juan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="自动收线"
                android:textSize="7sp"
                android:textColor="@color/colorText"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/alarm"
            style="@style/preview_top_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/alarm"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="报警设置"
                android:textSize="7sp"
                android:textColor="@color/colorText"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/autoHozontal"
            style="@style/preview_top_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/hozontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="自动水平"
                android:textSize="7sp"
                android:textColor="@color/colorText"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cameraChange"
            style="@style/preview_top_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/camera_change"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="镜头切换"
                android:textSize="7sp"
                android:textColor="@color/colorText"/>
        </FrameLayout>

        <FrameLayout
            style="@style/preview_top_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:clickable="false"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/preview_top_connect_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/disconnect"/>
            <TextView
                android:id="@+id/preview_top_connect_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="网络状态"
                android:textSize="7sp"
                android:textColor="@color/alarm_color"/>
        </FrameLayout>

